<% unless cart.line_items.empty? %>
  <h2>Carrello</h2>
  <table>
    <%= render(cart.line_items) %>
  
    <tr class="total_line">
      <td colspan="2">Totale</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price) %>
    </tr>
  </table>

  <%= button_to 'Svuota carrello', cart, method: :delete,
      data: { confirm: 'Svuotare davvero il carrello?' } %>
<% end %>